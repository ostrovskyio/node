        }
      },
      "delete": {
        "summary": "Delete an account from MongoDB (only for 'Admin')",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Account ID",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Account deleted",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
